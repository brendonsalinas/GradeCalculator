<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lazyengineers.gradecalculator" >
    <uses-sdk android:minSdkVersion="11" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewYear"
            android:label="@string/title_activity_new_year"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lazyengineers.gradecalculator.MainActivity" />
        </activity>
        <activity
            android:name=".year1"
            android:label="@string/title_activity_year1"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lazyengineers.gradecalculator.MainActivity" />
        </activity>
        <activity
            android:name=".NewClass"
            android:label="@string/title_activity_new_class"
            android:parentActivityName=".year1" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lazyengineers.gradecalculator.year1" />
        </activity>
    </application>

</manifest>
